<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393e46"
    android:orientation="vertical"
    tools:context=".thecal">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#CBE3CB"
        android:gravity="center"
        android:paddingTop="10pt"
        android:paddingRight="4pt"
        android:paddingBottom="20pt"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="150sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1pt"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/Ac"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#eeeeee"
                android:onClick="rest"
                android:text="Ac"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bm"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#eeeeee"
                android:text="+/-"
                android:textSize="18sp" />

            <Button
                android:id="@+id/p"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#eeeeee"
                android:text="%"
                android:textSize="18sp" />

            <Button
                android:id="@+id/t"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#222831"
                android:backgroundTint="#222831"
                android:onClick="onClickss"
                android:text="/"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/a7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#eeeeee"
                android:onClick="onClicknumber"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/a8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#eeeeee"
                android:onClick="onClicknumber"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/a9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#eeeeee"
                android:onClick="onClicknumber"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/tt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#222831"
                android:backgroundTint="#222831"
                android:onClick="onClickss"
                android:text="*"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/a4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#eeeeee"
                android:onClick="onClicknumber"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/a5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#eeeeee"
                android:onClick="onClicknumber"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/a6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#eeeeee"
                android:onClick="onClicknumber"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/n"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#222831"
                android:backgroundTint="#222831"
                android:onClick="onClickss"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/a1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#eeeeee"
                android:onClick="onClicknumber"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/a2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#eeeeee"
                android:onClick="onClicknumber"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/a3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#eeeeee"
                android:onClick="onClicknumber"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/z"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#222831"
                android:backgroundTint="#222831"
                android:onClick="onClickss"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#555555"
        android:orientation="horizontal">

        <Button
            android:id="@+id/a0"
            android:layout_width="60pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:backgroundTint="#eeeeee"
            android:onClick="onClicknumber"
            android:text="0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/aa."
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:backgroundTint="#eeeeee"
            android:onClick="onClicknumber"
            android:text="."
            android:textSize="18sp" />

        <Button
            android:id="@+id/y"
            android:layout_width="24pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="#222831"
            android:backgroundTint="#222831"
            android:onClick="onClickE"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>